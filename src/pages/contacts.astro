---
import Layout from '@/layouts/Layout.astro';
import Map from '@/components/Map/Map.astro';
import {BASE_URL, SITE_URL, LEGAL_ENTITY, LEGAL_INN} from '@/const'
import { phoneFormat } from '@/js/utils/numbers.format';
const salons = await fetch(`${BASE_URL}${SITE_URL}/data/salons.json`).then((response) => response.json());
const salon = salons[0]; //временно, наверное
console.log(salons);

---

<Layout title="TITLE" description="DESCRIPTION">
	<div class="relative md:min-h-[500px] bg-gray-50">
		<div class="container">
			<div class="flex flex-col md:flex-row pb-[400px] md:pb-0">

				<div class="w-full md:w-2/5 py-10">
					<h1 class="text-3xl sm:text-4xl font-bold">Контакты</h1>
					<div class="flex flex-wrap gap-y-5 mt-10">
						<div class="w-full">
							<small class="text-sm text-gray-500 block">Адрес</small>
							<div class="text-lg font-medium"><Fragment set:html={salon?.address} /></div>
						</div>
						<div class="w-full">
							<small class="text-sm text-gray-500 block">Телефон</small>
							<a
								href={`tel:${phoneFormat(salon?.phone)}`}
								class="text-lg font-medium transition-colors hover:text-accent-500 goal-click-lead-tel">
								{salon?.phone}
							</a>
						</div>
						<div class="w-full">
							<small class="text-sm text-gray-500 block">Режим работы</small>
							<div class="text-lg font-medium"><Fragment set:html={salon?.work_hours} /></div>
						</div>
						<div class="w-full">
							<small class="text-sm text-gray-500 block">Юридическое лицо</small>
							<div class="text-lg font-medium"><Fragment set:html={LEGAL_ENTITY} /></div>
						</div>
						<div class="w-full">
							<small class="text-sm text-gray-500 block">ИНН</small>
							<div class="text-lg font-medium"><Fragment set:html={LEGAL_INN} /></div>
						</div>
					</div>
				</div>

				<div class="h-[400px] md:h-auto w-full md:w-1/2 absolute md:top-0 right-0 bottom-0">
					<Map mapImg="/img/map-bg.webp" salons={salons} class="h-full" />
				</div>

			</div>
		</div>
	</div>
</Layout>