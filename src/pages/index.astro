---
import Layout from '@/layouts/Layout.astro';
import Banner from '@/components/Banner/Banner.astro';
import ModelList from '@/components/Model/ModelList.astro';
import Model from '@/components/Model/Model.astro';
import Callback from '@/components/Callback.astro';
import Services from '@/components/Services.astro';
import Contacts from '@/components/Contacts.astro';
// const models = await fetch(`${Astro.url.origin}/src/data/models.json`).then((response) => response.json());
import models from '@/data/models.json'
---

<Layout title="TITLE" descr="DESCRIPTION">
	<Banner fetchURL={`${Astro.url.origin}/src/data/banners.json`} />
	<ModelList fetchURL={`${Astro.url.origin}/src/data/models.json`} />
	{models && models.map((model: any) => <Model model={model}/>)}
	<Callback bgUrl="https://imgproxy.autocrm.ru/DArpoK-AuqQzcCZGWyXpOVwnXE86UTxQu-OsLdBO5Qs/rs:auto:0:0:1/dpr:1/q:100/g:sm/aHR0cHM6Ly8xOTUwMDQuc2VsY2RuLnJ1L3JlZi9jMTA2MDNiOWRiZTFjZTk5MmJjMTBlNTMzOTc4MWQ0OGQwZjJmY2UwLnBuZw.png" />
	<Services fetchURL={`${Astro.url.origin}/src/data/services.json`} />
	<Contacts
		fetchURL={`${Astro.url.origin}/src/data/salons.json`}
		mapImg="/img/map-bg.jpg"
		title="Наши контакты"
	/>
</Layout>
